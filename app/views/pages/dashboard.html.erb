<h1>Dashboard Page!</h1>
<h3 class='mt-5'>All my Flats</h3>
<ul>
<% @my_flats.each do |flat| %>
    <li>
      <% if flat.photos.attached? %>
        <%= cl_image_tag flat.photos.first.key, height: 300, width: 400, crop: :fill %>
      <% end %>
      <%= link_to flat.name, flat_path(flat) %>
    </li>
<% end %>
</ul>



<h3 class='mt-5'>My Bookings</h3>
<% @my_bookings.each do |booking| %>
<div>
  <%= booking.flat.name %>
  <%= booking.start_date %>
  <%= booking.end_date %>
  <%= booking.status %>
</div>
<% end %>

<h3 class='mt-5'>Bookings requests</h3>
<% @bookings_made_to_me.each do |booking| %>
<div>
  <%= booking.flat.name %>
  <%= booking.start_date %>
  <%= booking.end_date %>
  <%= booking.status %>
  <% if booking.status == "pending" || booking.status == "denied" %>
    <%= button_to "Approve", booking_approve_path(booking), method: :patch %>
  <% end %>
  <% if booking.status == "pending" || booking.status == "booked" %>
    <%= button_to "Deny",  booking_deny_path(booking), method: :patch %>
  <% end %>

</div>
<% end %>
